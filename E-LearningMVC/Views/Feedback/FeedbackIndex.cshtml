<div class="card-container">

    @foreach (var feedback in Model)
    {<div class="card">
            <div class="testimonial-entry">
                <img class="border rounded-circle p-2 mx-auto mb-3" src="~/images/@feedback.ClientImage" style="width: 80px; height: 80px;">
                <h5 class="mb-0">@feedback.ClientName</h5>
                <p>
                    @feedback.Profession <br />

                    @{
                        var currentDate = DateTime.Now;
                        var duration = currentDate - feedback.DateAdded;
                        var weeks = duration.Days / 7;
                    }

                    @*<p>Added: @feedback.DateAdded.ToString("MMMM dd, yyyy")</p>*@
                    @weeks weeks ago
                </p>

                <div class="testimonial-text bg-light text-center p-4">
                    <p class="mb-0">@feedback.Details</p>
                </div>
            </div>
        </div>
    }
</div>
   

