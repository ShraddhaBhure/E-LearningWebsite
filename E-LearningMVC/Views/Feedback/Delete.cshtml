@model C_Models.Feedback

<h1>Delete Feedback</h1>

<div>
    <h4>Are you sure you want to delete this feedback?</h4>
    <h5>Feedback details:</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Fid:</dt>
        <dd class="col-sm-10">@Model.Fid</dd>

        <dt class="col-sm-2">Client Name:</dt>
        <dd class="col-sm-10">@Model.ClientName</dd>

        <dt class="col-sm-2">Profession:</dt>
        <dd class="col-sm-10">@Model.Profession</dd>

        <dt class="col-sm-2">Course:</dt>
        <dd class="col-sm-10">@Model.Course</dd>

        <dt class="col-sm-2">Date Added:</dt>
        <dd class="col-sm-10">@Model.DateAdded</dd>

        <dt class="col-sm-2">Details:</dt>
        <dd class="col-sm-10">@Model.Details</dd>

        <dt class="col-sm-2">Client Image:</dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.ClientImage" width="100" height="100" />
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Fid" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
