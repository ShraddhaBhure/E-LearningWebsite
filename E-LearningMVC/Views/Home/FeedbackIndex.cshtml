@model IEnumerable<C_Models.Feedback>

<h1>Feedbacks</h1>

<!-- Testimonial End -->
<div class="container-xxl py-5">
    <div class="container">

        <p>
            @*<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FeedCreate">Add Your Feedback</a>*@

            <a asp-action="FeedCreate">Add Your Feedback</a>
        </p>
        <div class="row g-5">
            @*<div class="col-lg-3 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 400px;">

            </div>*@
            <div class="col-lg-12 wow fadeInUp" data-wow-delay="0.3s">
                <h6 class="section-title bg-white text-start text-primary pe-3">Our Clients </h6>
                <div class="card-container">

                    @foreach (var feedback in Model)
                    {<div class="card">
                            <div class="testimonial-entry">
                                <img class="border rounded-circle p-2 mx-auto mb-3" src="~/images/@feedback.ClientImage" style="width: 80px; height: 80px;">
                                <h5 class="mb-0">@feedback.ClientName</h5>
                                <p>
                                    @feedback.Profession <br />

                                    @{
                                        var currentDate = DateTime.Now;
                                        var duration = currentDate - feedback.DateAdded;
                                        var weeks = duration.Days / 7;
                                    }
                                    @weeks weeks ago
                                </p>

                                <div class="testimonial-text bg-light text-center p-4">
                                    <p class="mb-0">@feedback.Details</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial End -->
