@model C_Models.OnlineClass

<h1>Delete Class</h1>

<div>
    <h4>Are you sure you want to delete this class?</h4>
    <h2>@Model.Title</h2>
    <div class="form-group">
        <label>Description</label>
        <p>@Model.Description</p>
    </div>
    <div class="form-group">
        <label>Created By</label>
        <p>@Model.CreatedBy</p>
    </div>
    <div class="form-group">
        <label>Duration</label>
        <p>@Model.Duration</p>
    </div>
    <div class="form-group">
        <label>Cover Image</label>
        @if (!string.IsNullOrEmpty(Model.CoverImage))
        {
            <img src="@Url.Content("~/images/" + Model.CoverImage)" alt="Cover Image" />
        }
    </div>
    <div class="form-group">
        <label>Price</label>
        <p>@Model.Price</p>
    </div>
    <div class="form-group">
        <label>Category</label>
        <p>@Model.CourseCategory</p>
    </div>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ClassId" method="post" class="mt-4">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
