<a class="btn btn-primary py-4 px-lg-5 d-none d-lg-block" asp-area="" asp-controller="Login" asp-action="Create">Register New User  </a>

<div class="container-xxl py-5">
    <div class="row g-5">

        <div class="col-lg-12 wow fadeInUp" data-wow-delay="0.3s">

            <div class="card-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>Username</th>
                            <th>User Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Userid</td>
                                <td>@item.UserName</td>
                                <td>@item.UserRole</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.Userid })">Edit</a> |
                                    <a href="@Url.Action("Delete", new { id = item.Userid })">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
      </div>
            </div>
        </div>
</div>
