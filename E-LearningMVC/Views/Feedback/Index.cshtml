@model IEnumerable<C_Models.Feedback>

<h1>Feedbacks</h1>

<table class="table">
        <thead>
            <tr>
                <th>Fid</th>
                <th>Client Name</th>
                <th>Profession</th>
                <th>Course</th>
                <th>Date Added</th>
                <th>Details</th>
                <th>Client Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <td>@feedback.Fid</td>
                    <td>@feedback.ClientName</td>
                    <td>@feedback.Profession</td>
                    <td>@feedback.Course</td>
                    <td>@feedback.DateAdded</td>
                    <td>@feedback.Details</td>
                    <td><img src="~/images/@feedback.ClientImage" width="100" height="100" /></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@feedback.Fid">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@feedback.Fid">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Create">Create New Feedback</a>
    </p>
