@model C_Models.BooksLibrary

<div class="container-xxl py-5">
    <div class="row g-5">

        <div class="col-lg-12 wow fadeInUp" data-wow-delay="0.3s">

            <div class="card-container">
                @if (Model != null)
                {
                    <div class="card">
                        <div class="card-header">
                            <div>
                                <h2>@Model.Title</h2>
                                <div class="card-image">
                                    @if (!string.IsNullOrEmpty(Model.CoverImage))
                                    {
                                        <img src="~/images/@Model.CoverImage" alt="Cover Image" />
                                    }
                                    else
                                    {
                                        <span>No Image</span>
                                    }
                                </div>
                            </div>
                            <div class="card-body">

                                <div class="card-details">
                                    <p><strong>Author:</strong> @Model.Author</p>
                                    <p><strong>Price:</strong> @Model.Price</p>
                                    @*<p><strong>Category:</strong> @book.BookCategory</p>*@
                                </div>
                            </div>
                            <div class="card-footer">
                                <a class="edit-link" asp-action="Details" asp-route-id="@Model.BookId">View Details</a>
                            </div>

                        </div>

                    </div>

                }
                else
                {
                    <p>No recently added book found.</p>
                }
            </div>
        </div>
    </div>
</div>
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
