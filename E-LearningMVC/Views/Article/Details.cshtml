@model C_Models.Article

<h2>Article Details</h2>

<div>
    <h4>Article ID: @Html.DisplayFor(model => model.ArticleID)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Article Type:</dt>
        <dd>@Html.DisplayFor(model => model.ArticleType)</dd>
        <dt>Title:</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>
        <dt>Author Names:</dt>
        <dd>@Html.DisplayFor(model => model.AuthorNames)</dd>
        <dt>Abstract:</dt>
        <dd>@Html.DisplayFor(model => model.Abstract)</dd>
        <dt>Keywords:</dt>
        <dd>@Html.DisplayFor(model => model.Keywords)</dd>
        <dt>Conflict of Interest:</dt>
        <dd>@Html.DisplayFor(model => model.ConflictOfInterest)</dd>
        <dt>Ethical Clearance:</dt>
        <dd>@Html.DisplayFor(model => model.EthicalClearance)</dd>
        <dt>Registered To:</dt>
        <dd>@Html.DisplayFor(model => model.RegisteredTo)</dd>
        <dt>Acknowledgements:</dt>
        <dd>@Html.DisplayFor(model => model.Acknowledgements)</dd> 
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ArticleID }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.ArticleID }, new { onclick = "return confirm('Are you sure you want to delete this article?');" })
</p>
