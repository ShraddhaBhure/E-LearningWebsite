@model C_Models.HomeProjects

<h2>Delete Project</h2>

<div>
    <h4>Are you sure you want to delete this project?</h4>
    <h5>Title: @Html.DisplayFor(model => model.Title)</h5>
    <div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="ProjectId" />

            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" value="@Model.Title" readonly />
            </div>
            <div class="form-group">
                <label>Description</label>
                <input type="text" class="form-control" value="@Model.Description" readonly />
            </div>
            <div class="form-group">
                <label>Importance</label>
                <input type="text" class="form-control" value="@Model.Importance" readonly />
            </div>
            <div class="form-group">
                <label>Created By</label>
                <input type="text" class="form-control" value="@Model.CreatedBy" readonly />
            </div>
            <div class="form-group">
                <label>Submission Date</label>
                <input type="text" class="form-control" value="@Model.SubbmitDate.ToShortDateString()" readonly />
            </div>
            <div class="form-group">
                <label>Cover Image</label>
                <input type="text" class="form-control" value="@Model.CoverImage" readonly />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type="text" class="form-control" value="@Model.Price.ToString("0.00")" readonly />
            </div>
            <div class="form-group">
                <label>Project Category</label>
                <input type="text" class="form-control" value="@Model.ProjectCategory" readonly />
            </div>

            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
