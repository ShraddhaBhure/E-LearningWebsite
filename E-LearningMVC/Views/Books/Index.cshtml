@model IEnumerable<C_Models.BooksLibrary>

<h1>Books Library</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
                <th>Cover Image</th> 
                <th>Price</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(book.CoverImage))
                        {
                            <img src="~/images/@book.CoverImage" alt="Cover Image" style="width: 100px; height: 100px;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@book.Price</td>
                    <td>@book.BookCategory</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@book.BookId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


