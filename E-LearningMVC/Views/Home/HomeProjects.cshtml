@model IEnumerable<C_Models.HomeProjects>


<div class="container-xxl py-5">
    <div class="row g-5">

        <div class="col-lg-12 wow fadeInUp" data-wow-delay="0.3s">

            <div class="card-container">
                @foreach (var book in Model)
                {
                    <div class="card">
                        <div class="card-header">
                            <h3>@book.Title</h3>
                            <div class="card-image">
                                @if (!string.IsNullOrEmpty(book.CoverImage))
                                {
                                    <img src="~/images/@book.CoverImage" alt="Cover Image" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="card-details">
                                <p><strong>Developed by:</strong> @book.CreatedBy</p>
                                @*<p><strong>Description:</strong> @book.Description</p>*@
                                <p><strong>Price:</strong> @book.Price</p>
                                @*<p><strong>Category:</strong> @book.ProjectCategory</p>*@
                            </div>
                        </div>
                        <div class="card-footer">
                            <a class="edit-link" asp-action="Details" asp-route-id="@book.ProjectId">View Details</a>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>
  
