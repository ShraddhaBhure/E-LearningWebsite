@model C_Models.Article

<h2>Delete Article</h2>

<div>
    <h4>Are you sure you want to delete this article?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>

        <!-- Display other article properties here -->

    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Article", new { id = Model.ArticleID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>
