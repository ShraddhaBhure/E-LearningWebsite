@model C_Models.BooksLibrary
<h1>Book Deleted</h1>

<p>The book has been successfully deleted.</p>

<div>
    <h4>Deleted Book Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Cover Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.CoverImage))
            {
                <img src="~/images/@Model.CoverImage" alt="Cover Image" style="width: 100px; height: 100px;" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.BookCategory</dd>
    </dl>

    <a asp-controller="Books" asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
