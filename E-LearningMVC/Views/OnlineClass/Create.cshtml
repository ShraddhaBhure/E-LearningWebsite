@model C_Models.OnlineClass

<h1>Create New Class</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label>Created By</label>
        <input class="form-control" asp-for="CreatedBy" />
    </div>
    <div class="form-group">
        <label>Duration</label>
        <input class="form-control" asp-for="Duration" />
    </div>
    <div class="form-group">
        <label>Cover Image</label>
        <input type="file" class="form-control-file" asp-for="CoverImage" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input class="form-control" asp-for="CourseCategory" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
