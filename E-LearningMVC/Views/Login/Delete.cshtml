@model C_Models.Login

<h2>Delete Login</h2>

<div>
    <h4>Are you sure you want to delete this login?</h4>
    <dl class="dl-horizontal">
        <dt>User Name</dt>
        <dd>@Model.UserName</dd>
        <dt>User Role</dt>
        <dd>@Model.UserRole</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Login", new { id = Model.Userid }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>
